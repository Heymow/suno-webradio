{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "jsx": "react",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "types": ["vite/client", "vitest/globals"]
    },
    "include": [
        "src",
        "src/**/*.types.ts"
    ]
}